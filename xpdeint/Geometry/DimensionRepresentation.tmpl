@extends xpdeint.Geometry._DimensionRepresentation

@def defines
  @#
  @super
  @if $silent
    @stop
  @end if
  @#
#define ${globalLattice} (${lattice})
  @#
@end def

@def globals
  @#
  @super
  @#
  @if $silent
    @stop
  @end if
  @#
  @if $lattice
  @# We allocate an extra point just in case
${type}* ${arrayName} = (${type}*) xmds_malloc(sizeof(${type}) * (${globalLattice}+1));
  @end if
  @#
  @if $hasLocalOffset
ptrdiff_t $localLattice = 0;
ptrdiff_t $localOffset = 0;
  @end if
  @#
@end def