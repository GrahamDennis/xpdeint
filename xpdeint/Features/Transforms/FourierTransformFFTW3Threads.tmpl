@extends xpdeint.Features.Transforms.FourierTransformFFTW3

@def description: FFTW3 with threads
@attr $wisdomExtension = '.fftw3_threads'
@attr $uselib = ['fftw3', 'fftw3_threads']

@# defines
@def defines
  @#
  @super
#define _num_threads ${threadCount}
  @#
@end def

@def mainBegin($dict)
  @#
fftw_init_threads();
fftw_plan_with_nthreads(_num_threads);
  @super($dict)
  @#
@end def

@def mainEnd($dict)
  @super($dict)
fftw_cleanup_threads();
@end def