@extends Noise
@from Decorators import callOncePerClassGuard
@import random

@def description: Generic Intel MKL noise
@def generatorType: VSLStreamStatePtr

@*
  Static includes
*@
@@callOncePerClassGuard
@def static_includes
  @#
  @super
#include <mkl_vsl.h>
  @#
@end def

@*
  Globals
*@
@def globals
  @#
VSLStreamStatePtr ${generatorName};
  @#
@end def

@*
  Initialise seeds
*@
@def initialiseSeeds
  @#
  @if len($seedArray)
vslNewStream(&${generatorName}, VSL_BRNG_MT19937, $seedArray[0]);
  @else
  @set self.generatedSeeds = [random.randrange(0, pow(2, 32))]
vslNewStream(&${generatorName}, VSL_BRNG_MT19937, ${generatedSeeds[0]});
  @end if
  @#
@end def
