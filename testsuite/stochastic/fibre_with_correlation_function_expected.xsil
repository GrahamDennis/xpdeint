<XSIL Name="moment_group_3">
  <Param Name="n_independent">2</Param>
  <Array Name="variables" Type="Text">
    <Dim>8</Dim>
    <Stream><Metalink Format="Text" Delimiter=" \n"/>
kx kxp mean_g1 mean_g2 mean_g2minus stderr_g1 stderr_g2 stderr_g2minus 
